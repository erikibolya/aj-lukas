{% extends "layout/layout.twig" %}
{% block title %}Registrace{% endblock %}
{% block body %}

    <div class="container">
        <div class="section py-3 mb-sm-5">


            {% include "components/sectionTitle.twig"  with { title: "Registrace", center: true}  %}

            <div class="bg-white p-3 py-sm-5">

                <div class="row justify-content-center">
                    <div class="col-sm-10 col-md-8 col-lg-6">
                        <form>
                            <div class="d-sm-flex justify-content-center">
                                <label class="radio-button">
                                    <input class="radio-button__trigger" id="jobs1" type="radio" name="type" value="option1" checked>
                                    <div class="radio-button__content">
                                        <span class="radio-button__color">Registrace uchazeče</span>
                                    </div>
                                    <div class="radio-button__substitute">
                                        <svg class="radio-button__svg svgicon__circle svgicon--absolute" viewBox="0 0 20 20" >
                                        <circle class="svgicon__path" cx="10" cy="10" r="7"/>
                                        </svg>
                                    </div>
                                </label>
                                 <label class="radio-button">
                                    <input class="radio-button__trigger" id="jobs1" type="radio" name="type" value="option2" checked>
                                    <div class="radio-button__content">
                                        <span class="radio-button__color">Registrace firmy</span>
                                    </div>
                                    <div class="radio-button__substitute">
                                        <svg class="radio-button__svg svgicon__circle svgicon--absolute" viewBox="0 0 20 20" >
                                        <circle class="svgicon__path" cx="10" cy="10" r="7"/>
                                        </svg>
                                    </div>
                                </label>
                            </div>
                            <hr>

                            <fieldset>
                                <div class="form-group">
                                    <label for="exampleInputEmail1" class="form-label">Váš e-mail*</label>
                                    <input type="email" value="" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                            </fieldset>

                            <div class="form-group mb-3">
                                <div class="checkbox">
                                    <label class="checkbox__shadow-label "for="defaultCheck"></label>
                                    <input class="checkbox__trigger" id="defaultCheck" type="checkbox">
                                    <label class="checkbox__label" for="defaultCheck">
                                        Souhlasím s
                                    </label>
                                    <a class="checkbox__link" href="#">
                                        podmínkami používání
                                    </a>
                                    <label class="checkbox__label" for="defaultCheck">
                                        portálů ActiUnit s.r.o.
                                    </label>
                                    <label class="checkbox__substitute" for="defaultCheck">
                                        <svg class="checkbox__svg svgicon--absolute" viewBox="0 0 20 20">
                                        <polygon class="svgicon__path" points="8.3,16.4 2.9,11.2 4.9,9.1 8,12.1 14.8,3.6 17.1,5.4"/>
                                        </svg>
                                    </label>
                                </div>
                            </div>



                            <a href="{{ linkAccount }}" class="btn btn-success w-100">Registrovat</a>

                            <p class="text-center my-3">
                                nebo se přihlaste
                            </p>

                            <a href="{{ linkAccount }}" class="btn btn-primary w-100">Příhlásit se</a>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
