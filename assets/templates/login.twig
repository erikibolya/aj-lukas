{% extends "layout/layout.twig" %}
{% block title %}Přihlášení{% endblock %}
{% block body %}
    <div class="container">
        <div class="section py-3 mb-5">
            {% include "components/sectionTitle.twig"  with { title: "Přihlášení", center: true}  %}

            <div class="bg-white p-3 py-sm-5">
                <div class="row justify-content-center">
                    <div class="col-sm-10 col-md-8 col-lg-6">
                        <div class="alert alert-danger" role="alert">
                            <spa class="icon icon-warning-circle-fill"></spa>
                            Nesprávné přihlašovací údaje
                        </div>
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label">Emailová addresa</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

                            </div>
                            <div class="form-group is-invalid">
                                <label for="exampleInputPassword1" class="form-label">Heslo</label>
                                <input type="password" class="form-control is-invalid" id="exampleInputPassword1" placeholder="Password">
                                <div class="invalid-feedback">
                                    Špatné heslo
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="checkbox">
                                    <label class="checkbox__shadow-label "for="exampleCheck1"></label>
                                    <input class="checkbox__trigger" id="exampleCheck1" type="checkbox">
                                    <label class="checkbox__label" for="exampleCheck1">
                                        Zůstat přihlášen/a
                                    </label>
                                    <label class="checkbox__substitute" for="defaultCheck2">
                                        <svg class="checkbox__svg svgicon--absolute" viewBox="0 0 20 20">
                                        <polygon class="svgicon__path" points="8.3,16.4 2.9,11.2 4.9,9.1 8,12.1 14.8,3.6 17.1,5.4"/>
                                        </svg>
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Přihlásit</button>
                        </form>
                        <p class="text-center my-3">nebo se zaregistrovat</p>
                        <div class="mb-3">
                            <a href="{{ linkRegistration }}" class="btn btn-primary w-100">Zaregistrovat se</a>
                        </div>
                        <a href="{{ linkForgotPassword }}" class="btn btn-secondary w-100 text-center">Zapomenuté heslo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
