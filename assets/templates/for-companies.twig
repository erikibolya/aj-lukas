{% extends "layout/layout.twig" %}
{% block title %}Pro firmy{% endblock %}
{% block body %}
	<div class="container p-3 pb-sm-5 mb-5">
		<div class="bg-white text-center p-3 py-sm-5 border-b">
			<p class="h2 text-info">Roční členství v ActiClubu</p>
			<p class="mb-3">jednodušše jen</p>
			<strong class="h2 text-success">999,- Kč</strong>
		</div>

		<div class="bg-white text-center p-3 py-sm-4 border-b">
			{% for i in 0..2 %}
				<p><faker-lorem-sentences/></p>
			{% endfor %}

		</div>
		<div class="bg-white text-center p-3 mb-4">
			<a href="{{ linkRegistrationCompany }}" class="btn btn-primary btn-bottom mb-2 mr-sm-3">Registrovat Firmu</a>
			<a href="{{ linkLogin }}" class="btn btn-success btn-bottom mb-2">Přihlášení</a>
		</div>

		<div class="mb-4">
			{% include "components/sectionTitle.twig"  with { title: "Roční členství v klubu ActiJobsu"} %}
			<div class="bg-white p-3 d-flex flex-column flex-lg-row justify-content-between border-b">
				<div>
					<strong class="mb-3 d-inline-block">Členství classic</strong>
					<ul>
						{% for i in 0..7 %}
							<li>
								<faker-lorem-sentence/>
							</li>
						{% endfor %}
					</ul>
				</div>
				<div class="d-inline-flex flex-column justify-content-center align-items-sm-end text-right">
					<strong class="display-6">999,- Kč</strong>
				</div>
			</div>

			<div class="bg-white p-3 d-flex flex-column flex-lg-row justify-content-between">
				<div>
					<strong class="mb-3 d-inline-block">Členství VIP</strong>
					<ul>
						{% for i in 0..7 %}
							<li>
								<faker-lorem-sentence/>
							</li>
						{% endfor %}
					</ul>

				</div>
				<div class="d-inline-flex flex-column justify-content-center align-items-sm-end text-right">
					<strong class="display-6">7 999,- Kč</strong>
				</div>
			</div>
		</div>


		<div class="mb-4">
			{% set memberClass = ["Bronze", "Silver", "Gold", "Platinum"] %}

			{% include "components/sectionTitle.twig"  with { title: "Ceník inzerce pro člesntví Classic"} %}

			{% for class in memberClass %}
				<div class="bg-white p-3 d-flex flex-column flex-lg-row justify-content-between{% if not loop.last %} border-b{% endif %}">
					<div>
						<strong class="mb-3 d-inline-block">{{ class }}</strong>
						<ul>

							{% for i in 0..loop.index %}
								<li>
									<faker-lorem-sentence/>
								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="d-inline-flex flex-column justify-content-center align-items-sm-end text-right">
						{% if loop.index > 1 %}
							<strong class="display-6">{{ loop.index }} 999 AB</strong>
							* 1000 Kč
						{% else %}
							<strong class="display-6 text-success ">Zdarma</strong>
							<p class="text-success">(v rámci ročního členství</p>
						{% endif %}
					</div>
				</div>
			{% endfor %}
			<small class="text-muted d-block mt-2">Aperiam autem iste laborum labore ut fuga excepturi quas est.</small>
		</div>

		<div class="mb-4">
			{% include "components/sectionTitle.twig"  with { title: "Ceník inzerce pro člesntví VIP"} %}
			{% for class in memberClass %}
				<div class="bg-white p-3 d-flex flex-column flex-lg-row justify-content-between{% if not loop.last %} border-b{% endif %}">
					<div>
						<strong class="mb-3 d-inline-block">
							{{ class }}
							{% if loop.index > 2 %}<span class="text-info">(-50%)</span>{% endif %}
						</strong>
						<ul>
							{% for i in 0..loop.index %}
								<li>
									<faker-lorem-sentence/>
								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="d-inline-flex flex-column justify-content-center align-items-sm-end text-right">
						{% if loop.index > 2 %}
							<strong class="display-6">{{ loop.index }} 999 AB</strong>
							* 1000 Kč
						{% else %}
							<strong class="display-6 text-success ">Zdarma</strong>
							<p class="text-success">(v rámci ročního členství</p>
						{% endif %}
					</div>
				</div>
			{% endfor %}
			<small class="text-muted d-block mt-2">Aperiam autem iste laborum labore ut fuga excepturi quas est.</small>
		</div>

		<div class="mb-4">
			{% include "components/sectionTitle.twig"  with { title: "Nejčastější dotazy"} %}
			{% for i in 0..8 %}
				<div class="bg-white p-3 {% if not loop.last %} border-b{% endif %}">
					<div class="font-weight-bold"><faker-lorem-sentence/></div>
					<faker-lorem-sentence/>
				</div>
			{% endfor %}
		</div>

		<div class="mb-4">
			{% include "components/sectionTitle.twig"  with { title: "ActiBony"} %}
			{% for i in 0..5 %}
				<div class="bg-white p-3 d-md-flex justify-content-between{% if not loop.last %} border-b{% endif %}">
					<div>
						{{ loop.index }}000 AB
					</div>
					<div class="text-right">
						<faker-commerce-price/>
						Kč
					</div>
				</div>
			{% endfor %}
		</div>

		<div class="bg-white text-center p-3 py-sm-5">
			<p class="h2 text-info">Roční členství v ActiClubu</p>
			<p class="mb-3">jednodušše jen</p>
			<strong class="h2 text-success">999,- Kč</strong>
			<div class="text-center pt-3">
				<a href="{{ linkRegistrationCompany }}" class="btn btn-primary btn-bottom">Registrovat Firmu</a>
			</div>


	</div>


{% endblock %}
