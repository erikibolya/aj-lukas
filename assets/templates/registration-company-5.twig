{% extends "layout/layout-lite.twig" %}
{% block title %}Registrace firmy 5{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3 mb-5">
			{% include "components/sectionTitle.twig"  with { title: "Obchodní podmínky portálu ActiJobs.cz", center: true}  %}
			<div class="bg-white p-3">

				<p class="text-info mb-3 text-center">
					<faker-lorem-paragraph/>
				</p>
				{% for i in 0..2 %}
						<hr class="mx-minus-3">
						<div class="form-group form-check px-3">
							<input type="checkbox" class="form-check-input" id="exampleCheck{{ i }}">
							<label class="form-check-label" for="exampleCheck{{ i }}"><faker-lorem-sentences/><a href="#" class="pl-2">Zobrazit více</a></label>

						</div>
				{% endfor %}
				<hr class="mx-minus-3">
				<div class="text-center">
					<a href="{{ linkRegistrationCompany }}" class="btn btn-success btn-bottom">Pokračovat</a>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
