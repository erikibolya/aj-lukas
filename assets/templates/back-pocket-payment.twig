{% extends "layout/layout-back.twig" %}
{% block title %}Nákup Actibonů{% endblock %}
{% block body %}
    <div class="container">
        <div class="section py-3 mb-5">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ linkHomepage }}">Můj účet</a></li>
                    <li class="breadcrumb-item"><a href="{{ linkHomepage }}">Peneženka</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nákup Actibonů</li>
                </ol>
            </nav>

            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "ActiBony"} %}
                <div class="bg-white p-3 border-b text-center text-info">
                    <faker-lorem-sentence/>
                </div>
                {% for i in 0..5 %}
                    <label class="radio-button bg-white border-b">
                        <input class="radio-button__trigger" id="actibony{{ loop.index }}" type="radio" name="actibony" value="option{{ loop.index }}">
                        <div class="radio-button__content">
                            <div class="d-md-flex radio-button__color">
                                <div class="text-left">
                                    {{ loop.index }}000
                                    AB
                                    {% if loop.last %}
                                        <div class="text-info">-45% sleva</div>
                                    {% endif %}
                                </div>
                                <div class="text-right ml-auto pl-md-5 flex-shrink-0 align-self-center mt-2 mt-md-0">
                                    <faker-commerce-price/>
                                    Kč
                                    {% if loop.last %}
                                        <div class="text-muted text-s">
                                            <del>
                                                <faker-commerce-price/>
                                                Kč
                                            </del>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                        <div class="radio-button__substitute">
                            <svg class="radio-button__svg svgicon__circle svgicon--absolute" viewBox="0 0 20 20" >
                            <circle class="svgicon__path" cx="10" cy="10" r="7"/>
                            </svg>
                        </div>
                    </label>
                {% endfor %}
            </div>

            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "Souhrn"} %}
                <div class="bg-white p-3 border-b d-md-flex">
                    <div class="text-left">
                        <strong>50 000 ActiBonů</strong>
                    </div>
                    <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                        <faker-commerce-price/> Kč
                    </div>
                </div>
                <div class="bg-white p-3 border-b d-md-flex">
                    <div class="text-left">
                        Cena bez DPH
                    </div>
                    <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                        <faker-commerce-price/> Kč
                    </div>
                </div>
                <div class="bg-white p-3 border-b d-md-flex">
                    <div class="text-left">
                        DPH 21%
                    </div>
                    <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                        <faker-commerce-price/> Kč
                    </div>
                </div>
                <div class="bg-white p-3 d-sm-flex justify-content-between font-weight-bold text-success">
                    <div class="text-left">
                       <strong>Cena celkem</strong>
                    </div>
                    <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                        <faker-commerce-price/> Kč
                    </div>
                </div>
            </div>

            {% set paymentMethods = ["Platební kartou", "Komerční banka (online převod)",  "ČSOB (online převod)",  "FIO (online převod)",  "Česká spořitelna (online převod)"] %}
            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "Platební metody"} %}
                {% for method in paymentMethods %}
                    <label class="radio-button bg-white border-b">
                        <input class="radio-button__trigger" id="optradioPay{{ loop.index }}" type="radio" name="optradioPay" value="option{{ loop.index }}">
                        <div class="radio-button__content">
                            <div class="d-md-flex radio-button__color">
                                <div class="text-left">
                                    {{ method }}
                                </div>
                                <div class="text-right ml-auto pl-md-5 flex-shrink-0 align-self-center mt-2 mt-md-0">
                                    ihned
                                </div>
                            </div>

                        </div>
                        <div class="radio-button__substitute">
                            <svg class="radio-button__svg svgicon__circle svgicon--absolute" viewBox="0 0 20 20" >
                            <circle class="svgicon__path" cx="10" cy="10" r="7"/>
                            </svg>
                        </div>
                    </label>
                {% endfor %}
            </div>
            <div class="text-center">
                <a href="#" class="btn btn-success btn-bottom">Objednat a zaplatit</a>
            </div>

        </div>
    </div>


{% endblock %}
