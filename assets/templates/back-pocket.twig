{% extends "layout/layout-back.twig" %}
{% block title %}Peněženka{% endblock %}
{% block body %}
    <div class="container">
        <div class="section py-3">
            <div class="d-sm-flex justify-content-between align-items-center mb-3">
                <nav aria-label="breadcrumb" class="d-sm-inline-block">
                    <ol class="breadcrumb mb-sm-0">
                        <li class="breadcrumb-item"><a href="{{ linkMyAccount }}">Můj účet</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Peněženka</li>
                    </ol>
                </nav>
                <div>
                    <a href="{{ linkAgentCreate }}" class="btn btn-info w-100 w-sm-auto">
                        <span class="icon icon-plus mr-2"></span>Dobít Actibony</a>
                </div>
            </div>

            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "Stav Actibonů"}  %}
                {% set statuses =["Zakoupených", "Získaných", "Využitých", "Zůstatek"]  %}
                {% for status in statuses %}
                    <div class="bg-white p-3 d-md-flex {% if loop.last %} text-success font-weight-bold{% endif %}{% if not loop.last %} border-b{% endif %}">
                        <div class="text-left">
                            {{status}}
                        </div>
                        <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                            <faker-random-number/> AB
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "Využité Actibony"}  %}
                {% set statuses =["Zakoupených", "Získaných", "Využitých", "Zůstatek"]  %}
                {% for i in 0..2 %}
                    <div class="bg-white p-3 d-md-flex {% if not loop.last %} border-b{% endif %}">
                        <div class="text-left">
                            <faker-lorem-sentences/>
                        </div>
                        <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                            <faker-random-number/> AB
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mb-4">
                {% include "components/sectionTitle.twig"  with { title: "Přehled transakcí"}  %}
                {% set statuses =["Zakoupených", "Získaných", "Využitých", "Zůstatek"]  %}
                {% for i in 0..10 %}
                    <div class="bg-white p-3 d-md-flex {% if not loop.last %} border-b{% endif %}">
                        <div class="text-left">
                            <faker-lorem-sentences/>
                        </div>
                        <div class="text-right pl-md-5 ml-auto flex-shrink-0 align-self-center mt-2 mt-md-0">
                            <faker-random-number/> AB
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% include "components/pagination.twig" %}

        </div>
    </div>


{% endblock %}
