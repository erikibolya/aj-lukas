{% extends "layout/layout.twig" %}
{% block title %}Změna hesla{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3 mb-5">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="{{ linkMyAccount }}">Můj účet</a></li>
					<li class="breadcrumb-item active" aria-current="page">Změna hesla</li>
				</ol>
			</nav>

			<div class="bg-white p-3 py-sm-5">
				<div class="row justify-content-center">
					<div class="col-sm-10 col-md-8 col-lg-6">
						<form>
							<div class="form-group">
								<label for="exampleInputPassword1" class="form-label">Původní heslo</label>
								<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
							</div>

							<div class="form-group">
								<label for="exampleInputPassword2" class="form-label">Nové heslo</label>
								<input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
								<small id="passwordHelpBlock" class="form-text text-muted">
									Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
								</small>
							</div>


							<div class="form-group">
								<label for="exampleInputPassword3" class="form-label">Heslo znovu</label>
								<input type="password" class="form-control" id="exampleInputPassword3" placeholder="Password">
							</div>
							<a href="#" class="btn btn-success w-100">Změnit heslo</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
