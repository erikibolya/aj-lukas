{% extends "layout/layout.twig" %}
{% block title %}Změna e-mailu{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3 mb-5">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="{{ linkMyAccount }}">Můj účet</a></li>
					<li class="breadcrumb-item active" aria-current="page">Změna e-mailu</li>
				</ol>
			</nav>


			<div class="bg-white p-3 py-sm-5">
				<div class="row justify-content-center">
					<div class="col-sm-10 col-md-8 col-lg-6">
						<form>
							<fieldset disabled>
								<div class="form-group">
									<label for="exampleInputEmail1" class="form-label">Původní e-mail</label>
									<input type="email" value="jmeno@email.com" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
								</div>
							</fieldset>

							<div class="form-group">
								<label for="exampleInputEmail2" class="form-label">Nový e-mail  *</label>
								<input type="email" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp" placeholder="Enter email" required>
							</div>

							<div class="form-group is-invalid">
								<label for="exampleInputEmail3" class="form-label">Nový e-mail znovu *</label>
								<input type="email" class="form-control" id="exampleInputEmail3" aria-describedby="emailHelp" placeholder="Enter email" required>
								<div class="invalid-feedback">
									Zadaný e-mail je ve špatném formátu
								</div>
							</div>

							<div class="form-group">
								<label for="exampleInputPassword1" class="form-label">Heslo</label>
								<input type="password" class="form-control has-danger" id="exampleInputPassword1" placeholder="Password">
							</div>
							<a href="#" class="btn btn-success w-100">Změnit e-mail</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
