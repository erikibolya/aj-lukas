{% extends "layout/layout.twig" %}
{% block title %}Agenti{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3">

			<div class="d-sm-flex justify-content-between align-items-center mb-3">
				<nav aria-label="breadcrumb" class="d-sm-inline-block">
					<ol class="breadcrumb mb-sm-0">
						<li class="breadcrumb-item"><a href="{{ linkMyAccount }}">Můj účet</a></li>
						<li class="breadcrumb-item active" aria-current="page">Agenti</li>
					</ol>
				</nav>
				<div>
					<a href="{{ linkAgentCreate }}" class="btn btn-info w-100 w-sm-auto"><span
										class="icon icon-plus-circle mr-2"></span>Nový agent</a>
				</div>
			</div>

			{% for i in 0..3 %}
				<div class="bg-white p-3 mb-4">
					<div class="icon-list">
						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-user"></span></div>
							<div class="icon-list__info-col">Hledaná práce</div>
							<div class="icon-list__text-col">Asistentka</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-location"></span></div>
							<div class="icon-list__info-col">Kde hledám práci</div>
							<div class="icon-list__text-col">
								<faker-address-city/>
								+10km
							</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-money"></span></div>
							<div class="icon-list__info-col">Plat</div>
							<div class="icon-list__text-col">30 000 - 50 000,- Kč</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-check"></span></div>
							<div class="icon-list__info-col">Pracovní poměr</div>
							<div class="icon-list__text-col">Plný úvazek</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-student"></span></div>
							<div class="icon-list__info-col">Vzdělání</div>
							<div class="icon-list__text-col">Středoškolské</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-question-mark-circle"></span></div>
							<div class="icon-list__info-col">Pozice vhodná pro</div>
							<div class="icon-list__text-col">Studenty</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-building"></span></div>
							<div class="icon-list__info-col">Zadavatel</div>
							<div class="icon-list__text-col">Zaměstnavatel</div>
						</div>

						<div class="icon-list__row">
							<div class="icon-list__icon-col"><span class="icon icon-search"></span></div>
							<div class="icon-list__info-col">Nalezených nabídek</div>
							<div class="icon-list__text-col">
								{% if loop.first %}
									<a href="{{ linkOffersFiltered }}" class="badge badge-success mr-3">
										1 nová <span class="icon icon-arrow-right"></span>
									</a>
								{% elseif loop.last %}
									<span class="text-muted">0 nabídek</span>
							  {% else %}
								  <a href="{{ linkOffersFiltered }}">5 nabídek <span class="icon icon-arrow-right"></span></a>
								{% endif %}
							</div>
						</div>

					</div>


					<hr class="mx-minus-3">
					<div class="switch__wrapper d-flex justify-content-between align-items-center mb-2">
						<div>Zasílat upozorněni na e-mail</div>
						<label class="switch">
							<input type="checkbox" class="switch__state">
							<span class="switch__toggle"></span>
						</label>
					</div>
					<hr class="mx-minus-3">
					<div class="switch__wrapper d-flex justify-content-between align-items-center mb-3">
						<div>Zobrazovat oznámení v tomto zařízení</div>
						<label class="switch">
							<input type="checkbox" class="switch__state">
							<span class="switch__toggle"></span>
						</label>
					</div>
					<hr class="mx-minus-3">

					<div class="row justify-content-center">
						<div class="col-6 col-sm-3 col-lg-3 mb-3 mb-sm-0">
							<button class="btn btn-secondary w-100"><span class="icon icon-cross mr-2"></span><span
												class="hidden-sm-down">Smazat</span></button>
						</div>
						<div class="col-6 col-sm-3 col-lg-3 mb-3 mb-sm-0">
							<a href="{{ linkAgentCreate }}" class="btn btn-secondary w-100"><span
												class="icon icon-edit mr-2"></span><span class="hidden-sm-down">Upravit</span></a>
						</div>
						<div class="col-sm-6 col-lg-3">
							<a href="{{ linkSavedOffers }}" class="btn btn-success w-100{% if loop.last %} disabled{% endif %}"><span class="icon icon-search mr-2"></span>Zobrazit
								nabídky</a>
						</div>
					</div>
				</div>
			{% endfor %}

			{% include "components/pagination.twig" %}
		</div>
	</div>



{% endblock %}
