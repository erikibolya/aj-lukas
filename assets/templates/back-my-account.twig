{% extends "layout/layout-back.twig" %}
{% block title %}Můj ůčet{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3">
			<div class="bg-white px-3 pt-3 mb-5">
				{% set cards = [
					{
						"title": "Objednávká služeb",
						"link": linkBackOrder,
						"icon": "cart"
					},{
						"title": "Faktury",
						"link": linkBackInvoices,
						"icon": "document"
					},{
						"title": "Peněženka",
						"link": linkBackPocket,
						"icon": "diamond"
					},{
						"title": "Uložené odpovědi",
						"link": linkBackAnswers,
						"icon": "star"
					},{
						"title": "Kontaktní osoby",
						"link": linkBackContactPersons,
						"icon": "email"
					},{
						"title": "Údaje společnosti",
						"link": linkBackCompany,
						"icon": "building"
					},{
						"title": "Affiliate",
						"link": linkBackAffiliate,
						"icon": "handshake"
					},{
						"title": "Změna hesla",
						"link": linkPasswordChange,
						"icon": "lock"
					},{
						"title": "Změna e-mailu",
						"link": linkEmailChange,
						"icon": "email"
					},{
						"title": "Souhlasy",
						"link": linkConditions,
						"icon": "check"
					},{
						"title": "Zrušení účtu",
						"link": linkDeleteAccount,
						"icon": "cross-circle"
					},{
						"title": "Odhlášení",
						"link": linkHomepage,
						"icon": "login"
					},
				] %}

				<div class="row flex-wrap">
					{% for card in cards %}
						<div class="col-sm-6 col-md-4 col-lg-3 mb-3">
							<a href="{{ card.link }}" class="card card--box">
								<span class="card--box__content">
									<span class="display-5 icon icon-{{ card.icon }} mr-3 mr-sm-0 mb-sm-2"></span>
									<span class="d-block">{{ card.title }}</span>
								</span>
							</a>
						</div>
					{% endfor %}
				</div>

			</div>
		</div>
	</div>

{% endblock %}
