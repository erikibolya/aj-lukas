{% extends "layout/layout.twig" %}
{% block title %}Zapomenuté heslo{% endblock %}
{% block body %}

	<div class="container">
		<div class="section py-3 mb-5">
			{% include "components/sectionTitle.twig"  with { title: "Zapomenuté heslo", center: true}  %}
			<div class="bg-white p-3 py-sm-5">
				<div class="row justify-content-center">
					<div class="col-sm-10 col-md-8 col-lg-6">
						<form>
							<div class="form-group">
								<label for="exampleInputPassword2" class="form-label">Nové heslo*</label>
								<input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
								<small id="passwordHelpBlock" class="form-text text-muted">
									Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
								</small>
							</div>


							<div class="form-group">
								<label for="exampleInputPassword3" class="form-label">Heslo znovu*</label>
								<input type="password" class="form-control" id="exampleInputPassword3" placeholder="Password" required>
							</div>
							<button type="submit" class="btn btn-success w-100">Pokračovat</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
